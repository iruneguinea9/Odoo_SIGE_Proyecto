<?xml version="1.0"?>
<odoo>
    <!--Vista para la tabla de asignaturas-->
    <record id="instituto_irune_asignaturas_action" model="ir.actions.act_window">
        <field name="name">Asignaturas</field>
        <field name="res_model">instituto.irune.asignaturas</field>
        <field name="view_mode">tree,form</field>
    </record>
     <!--Vista de arbol para el modulo-->
     <record id="instituto_irune_asignaturas_view_tree" model="ir.ui.view">
        <field name="name">instituto.irune.asignaturas.tree</field>
        <field name="model">instituto.irune.asignaturas</field>
        <field name="arch" type="xml">
        <tree string="Vista arbol">
                <field name="name"/>
            </tree>
        </field>
    </record>
    <!--Vista de formulario para el modulo-->
    <record id="instituto_irune_asignaturas_view_form" model="ir.ui.view">
        <field name="name">instituto.irune.asignaturas.form</field>
        <field name="model">instituto.irune.asignaturas</field>
        <field name="arch" type="xml">
            <form string="Vista formulario">
                <sheet>
                
                    <h1><field name="name"/></h1>
                    
                </sheet>
            </form>
        </field>
    </record>
</odoo>